<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/fl_anim_panel"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_marginTop="140dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="32dp"
                android:textSize="16sp"
                android:textColor="#e6000000"
                android:text="Allow permission"/>

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_gravity="right">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_30"
                    android:background="#b9b8b8"
                    android:layout_gravity="center_vertical"/>
                <View
                    android:id="@+id/v_switch_bg"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_vertical|left"
                    android:background="@color/primary_color"/>
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/img_white"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_switch_toggle"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    app:backgroundTint="#f1f1f1"
                    android:layout_gravity="center_vertical|left"/>
            </FrameLayout>

        </FrameLayout>
        <ImageView
            android:id="@+id/iv_finger"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_finger"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="-20dp"
        android:layout_below="@id/fl_anim_panel"
        android:src="@drawable/img_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_arrow"
        android:text="@string/overlay_reminder_text"/>

</RelativeLayout>
