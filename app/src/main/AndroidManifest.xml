<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ctc.overlay">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Overlay">
        <activity android:name=".TargetActivity"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ctc.easyoverlay.OverlayDirectionActivity"
            android:theme="@style/Overlay.Direction" />
        <activity
            android:name="com.ctc.easyoverlay.StartInBackgroundActivity"
            android:theme="@style/Overlay.Direction" />
    </application>

</manifest>